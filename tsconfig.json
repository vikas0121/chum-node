{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "paths": {
      "@schemas": [
        "infrastructure/data/common/schemas"
      ],
      "@core/models": [
        "core/common/models"
      ],
      "@infrastructure/models": [
        "infrastructure/api/models"
      ],
      "@utils": [
        "utils"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}